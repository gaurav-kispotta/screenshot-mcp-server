{
  "name": "screenshot-mcp-server",
  "version": "1.0.0",
  "description": "A Media Control Protocol (MCP) server that captures screenshots of windows in macOS",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "docs": "typedoc src/ --out public/docs",
    "check-permissions": "ts-node src/check-permissions.ts",
    "thorough-check": "ts-node src/thorough-permission-check.ts",
    "test-api": "node test-api.js"
  },
  "keywords": [
    "screenshot",
    "mcp",
    "macos",
    "media control protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "get-windows": "^9.2.0",
    "jsonwebtoken": "^9.0.0",
    "mdns": "^2.7.2",
    "sharp": "^0.32.0",
    "socket.io": "^4.6.1",
    "winston": "^3.8.2",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.0",
    "@types/sharp": "^0.31.1",
    "@types/socket.io": "^3.0.2",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
